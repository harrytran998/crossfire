{
  "name": "crossfire",
  "version": "0.1.0",
  "private": true,
  "description": "Browser-Based Multiplayer FPS - Inspired by Crossfire",
  "license": "MIT",
  "author": "Harry Tran",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "type": "module",
  "scripts": {
    "dev": "cd apps/server && bunx tsdown --watch",
    "build": "bunx moon run :build",
    "test": "echo 'No tests yet' && exit 0",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "typecheck": "echo 'Type checking skipped' && exit 0",
    "clean": "rm -rf dist node_modules/.cache",
    "db:migrate": "cd packages/database && migrate -database $DATABASE_URL -path migrations up",
    "db:rollback": "cd packages/database && migrate -database $DATABASE_URL -path migrations down 1",
    "db:seed": "bun run packages/database/scripts/seed.ts",
    "db:generate": "cd packages/database && kysely-codegen --out-file src/types.ts",
    "db:create": "cd packages/database && migrate create -ext sql -dir migrations -seq"
  },
  "devDependencies": {
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "tsdown": "^0.20.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "packageManager": "bun@1.3.9"
}
