{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@crossfire/tsconfig/browser.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "paths": {
      "@crossfire/shared": ["../../packages/shared/src"],
      "@crossfire/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
