{
  "name": "@crossfire/database",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist",
    "generate-types": "kysely-codegen --out-file src/types.ts",
    "migrate-up": "migrate -database $DATABASE_URL -path migrations up",
    "migrate-down": "migrate -database $DATABASE_URL -path migrations down 1",
    "create-migration": "migrate create -ext sql -dir migrations -seq",
    "seed": "bun run scripts/seed.ts",
    "reset": "migrate -database $DATABASE_URL -path migrations drop",
    "test": "bun test tests/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "effect": "^3.19.16",
    "@effect/sql": "^0.38.0",
    "@effect/sql-pg": "^0.39.0",
    "kysely": "^0.28.11",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "kysely-codegen": "^0.19.0",
    "typescript": "^5.9.3"
  }
}
